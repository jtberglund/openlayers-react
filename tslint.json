{
    "extends": ["tslint:recommended", "tslint-react", "tslint-eslint-rules", "tslint-config-prettier", "tslint-react-hooks"],
    "rules": {
        "align": [true, "parameters"],
        "array-type": false,
        "arrow-parens": false,
        "brace-style": [true, "1tbs", { "allowSingleLine": true }],
        "curly": true,
        "eofline": false,
        "interface-name": [false],
        "jsx-alignment": true,
        "jsx-boolean-value": false,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "jsx-wrap-multiline": false,
        "max-classes-per-file": [true, 1],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-console": [false],
        "no-duplicate-case": true,
        "no-empty": false,
        "no-empty-interface": false,
        "no-extra-semi": true,
        "no-invalid-this": true,
        "no-multi-spaces": true,
        "no-unexpected-multiline": true,
        "object-literal-key-quotes": [false],
        "object-literal-sort-keys": false,
        "one-line": [true, "check-open-brace", "check-whitespace"],
        "ordered-imports": [false],
        "prefer-const": true,
        "prefer-for-of": false,
        "quotemark": [true, "single", "jsx-double"],
        "react-hooks-nesting": "error",
        "trailing-comma": [false],
        "variable-name": [true, "check-format", "ban-keywords", "allow-pascal-case"],
        "whitespace": [true, "check-decl", "check-operator", "check-separator", "check-type", "check-module"]
    },
    "jsRules": {
        "curly": true
    }
}

{
    "compilerOptions": {
        "target": "esnext",
        "module": "umd",
        "allowJs": true,
        "jsx": "react",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "baseUrl": "./",
        "paths": {
            "ol": ["node_modules/ol/src"],
            "ol/*": ["node_modules/ol/src/*"],
            "openlayers-react": ["../../node_modules/openlayers-react/src"]
        }
    },
    "include": ["src", "node_modules/ol/**/*.js"]
}
